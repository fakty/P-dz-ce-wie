            <Image x:Name="Field01" HorizontalAlignment="Left" Height="65" Margin="0,253,0,0" VerticalAlignment="Top" Width="86" Grid.Column="1" Source="/Pędzące Żółwie;component/Resources/turtle_violet.png"/>
            <Image x:Name="Field02" HorizontalAlignment="Left" Height="65" Margin="0,204,0,0" VerticalAlignment="Top" Width="86" Grid.Column="1" Source="/Pędzące Żółwie;component/Resources/turtle_red.png"/>
            <Image x:Name="Field03" HorizontalAlignment="Left" Height="65" Margin="0,151,0,0" VerticalAlignment="Top" Width="86" Grid.Column="1" Source="/Pędzące Żółwie;component/Resources/turtle_green.png"/>
            <Image x:Name="Field04" HorizontalAlignment="Left" Height="65" Margin="0,101,0,0" VerticalAlignment="Top" Width="86" Grid.Column="1" Source="/Pędzące Żółwie;component/Resources/turtle_blue.png"/>
            <Image x:Name="Field10" HorizontalAlignment="Left" Height="65" Margin="0,139,0,0" VerticalAlignment="Top" Width="86" Grid.Column="2"/>
            <Image x:Name="Field11" HorizontalAlignment="Left" Height="65" Margin="0,119,0,0" VerticalAlignment="Top" Width="86" Grid.Column="2"/>
            <Image x:Name="Field12" HorizontalAlignment="Left" Height="65" Margin="0,101,0,0" VerticalAlignment="Top" Width="86" Grid.Column="2"/>
